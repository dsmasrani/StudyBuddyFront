{
    "compilerOptions": {
      "target": "es6",
      "module": "ESNext",
      "baseUrl": "./src",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "NodeNext",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts", "src/index.ts"],
    "exclude": ["node_modules"],
    "lib": ["esnext"],
    "ts-node": {
      "esm": true
    }
  }